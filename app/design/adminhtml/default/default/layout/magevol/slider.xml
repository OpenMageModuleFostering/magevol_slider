<layout>
    <adminhtml_slider_index>
        <reference name="content">
            <block type="magevol_slider/adminhtml_slider" name="magevol_slider"/>
        </reference>
    </adminhtml_slider_index>
    <adminhtml_slider_edit>
        <reference name="head">
        	<action method="addCss"><stylesheet>magevol/css/spectrum.css</stylesheet></action>
        	<action method="addCss"><stylesheet>magevol/css/font-awesome.min.css</stylesheet></action>
        	<action method="addCss"><stylesheet>magevol/css/style.css</stylesheet></action>
        	<action method="addItem"><type>skin_js</type><script>magevol/js/jquery.js</script></action>
        	<action method="addItem"><type>skin_js</type><script>magevol/js/spectrum.js</script></action>
        </reference>
    </adminhtml_slider_edit>
</layout>